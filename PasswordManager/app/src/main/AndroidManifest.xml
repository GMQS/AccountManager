<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.accountmanager">

    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity android:name=".AppSettingsActivity"></activity>
        <activity android:name=".FilterTestActivity" />
        <activity
            android:name=".HeadingEditActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ColorPalettActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".CropImageActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.dropbox.core.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="db-mb56hamy5tjecjd" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CloudSyncActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".OtherSettingsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_other_settings" />
        <activity
            android:name=".Tutorial"
            android:configChanges="orientation|screenSize"
            android:theme="@style/CustomWelcomeScreenTheme" />
        <activity
            android:name=".PasscodeActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddMultiAccountActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MultiAccountListActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AccountInfoActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".CreateDataActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name="Async.AsyncWork"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>