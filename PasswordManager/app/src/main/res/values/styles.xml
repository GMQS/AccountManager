        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

    <style name="DeleteLine">
        <item name="colorControlNormal">#00C0C0C0</item>
    </style>

    <style name="GrayOutLine">
        <item name="colorControlNormal">#7E7E7E</item>
    </style>

    <style name="EditTextPink">
        <item name="colorControlNormal">#00C0C0C0</item>
        <item name="colorControlActivated">@color/PinkAccent</item>
        <item name="android:textColorHighlight">#4DC51162</item>
        <item name="android:textColorHint">@color/colorUnderLineActivated</item>
        <item name="android:textColor">@color/PinkAccent</item>
        <item name="android:textCursorDrawable">@color/PinkAccent</item>
    </style>

    <style name="EditTextCyan">
        <item name="colorControlNormal">#00C0C0C0</item>
        <item name="colorControlActivated">@color/CyanAccent</item>
        <item name="android:textColorHighlight">#4D1186C5</item>
        <item name="android:textColorHint">@color/colorUnderLineActivated</item>
        <item name="android:textColor">@color/CyanAccent</item>
        <item name="android:textCursorDrawable">@color/CyanAccent</item>
    </style>

    <style name="EditTextOrange">
        <item name="colorControlNormal">#00C0C0C0</item>
        <item name="colorControlActivated">@color/OrangeAccent</item>
        <item name="android:textColorHighlight">#4DC55911</item>
